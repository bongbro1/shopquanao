@model ShopQuanAo.Areas.Admin.Models.user

@{
  ViewData["Title"] = "Thêm mới người dùng";
  Layout = "_AdminLayout";
}

<div class="row">
  <div class="col-6">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Thêm mới người dùng</h4>
        <form class="forms-sample" asp-controller="users" asp-action="create">
          <div class="form-group">
            <label>ID</label>
            <input type="text" class="form-control" placeholder="ID" disabled>
          </div>
          <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" asp-for="Name" placeholder="Name">
          </div>
          <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" asp-for="Email" placeholder="Email">
          </div>
          <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" asp-for="Password" placeholder="Password">
          </div>
          <div class="form-group">
            <label>Phone</label>
            <input type="text" class="form-control" asp-for="Phone" placeholder="Phone">
          </div>
          <div class="form-group">
            <label>Address</label>
            <input type="text" class="form-control" asp-for="Address" placeholder="Address">
          </div>
          <div class="form-group">
            <label asp-for="Role">Role</label>
            <select class="form-control" asp-for="Role" asp-items="ViewBag.Role">
            </select>
          </div>

          <button type="submit" class="btn btn-primary mr-2">Submit</button>
          <a class="btn btn-dark" href="/admin/categories">Cancel</a>
        </form>
      </div>
    </div>
  </div>
</div>
