@model IEnumerable<ShopQuanAo.Areas.Admin.Models.user>

@{
  ViewData["Title"] = "Danh sách người dùng";
  Layout = "_AdminLayout";
}

<div class="card">
	<div class="card-body">
		<h4 class="card-title">Danh sách người dùng</h4>
		<p class="card-description">
			<div class="table-responsive">
				<table class="table table-dark">
					<thead>
						<tr>
							<th> STT </th>
							<th> Họ tên </th>
							<th> Email </th>
							<th> Quyền truy cập </th>
							<th> Địa chỉ </th>
							<th> # </th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td> @item.Id </td>
								<td> @item.Name </td>
								<td> @item.Email </td>
								<td> @item.Role </td>
								<td> @item.Address </td>
								<td>
									<a class="btn btn-success btn-fw" href="/admin/users/edit/?id=@item.Id">Sửa</a>
									<a class="btn btn-info btn-fw" href="/admin/users/edit/?id=@item.Id">Xem</a>
									<a class="btn btn-danger btn-fw" href="/admin/users/edit/?id=@item.Id">Xóa</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
				<div style="margin-top: 20px;">
					<a class="btn btn-outline-primary btn-fw" href="/admin/users/create">Thêm mới</a>
				</div>
			</div>
	</div>
</div>
