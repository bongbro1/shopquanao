@model ShopQuanAo.Areas.Admin.Models.category

@{
	ViewData["Title"] = "Xóa danh mục";
	Layout = "_AdminLayout";
}

<div class="row">
	<div class="col-6">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Xóa danh mục</h4>
				<form class="forms-sample" asp-controller="categories" asp-action="delete">
					<div class="form-group">
						<label for="exampleInputUsername1">ID</label>
						<input type="text" class="form-control" asp-for="Id" placeholder="ID" readonly>
					</div>
					<div class="form-group">
						<label for="exampleInputEmail1">Name</label>
						<input type="text" class="form-control" asp-for="Name" placeholder="Name" readonly>
					</div>

					<button type="submit" class="btn btn-primary mr-2">Xóa</button>
					<a class="btn btn-dark" href="/admin/categories">Quay lại</a>
				</form>
			</div>
		</div>
	</div>
</div>
