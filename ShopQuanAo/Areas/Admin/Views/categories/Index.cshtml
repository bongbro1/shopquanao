@model IEnumerable<ShopQuanAo.Areas.Admin.Models.category>

@{
	ViewData["Title"] = "Danh sách danh mục";
	Layout = "_AdminLayout";
}

<div class="card">
	<div class="card-body">
		<h4 class="card-title">Danh sách danh mục</h4>
		<p class="card-description">
			<div class="table-responsive">
				<table class="table table-dark">
					<thead>
						<tr>
							<th> STT </th>
							<th> Tên danh mục </th>
							<th> # </th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td> @item.Id </td>
								<td> @item.Name </td>
								<td>
									<a class="btn btn-success btn-fw" href="/admin/categories/edit?id=@item.Id">Sửa</a>
									<a class="btn btn-info btn-fw" href="/admin/categories/details?id=@item.Id">Xem</a>
									<a class="btn btn-danger btn-fw" href="/admin/categories/delete?id=@item.Id">Xóa</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
				<div style="margin-top: 20px;">
					<a class="btn btn-outline-primary btn-fw" href="/admin/categories/create">Thêm mới</a>
				</div>
			</div>
	</div>
</div>

