  <script src="~/AdminAssets/js/misc.js"></script>
  <script src="~/AdminAssets/js/settings.js"></script>
  <script src="~/AdminAssets/js/todolist.js"></script>
  @await RenderSectionAsync("Scripts", required: false)
  <!-- endinject -->
</body>
</html>